{
  "name": "codespex",
  "displayName": "gj :: codeSpex",
  "description": "Show coding help using VS Code's editor commenting feature",
  "publisher": "georgejames",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
  ],
  "icon": "media/extension-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gjsjohnmurray/vscode-codespex"
  },
  "extensionDependencies": [
    "intersystems.language-server"
  ],
  "activationEvents": [
    "onLanguage:objectscript-class",
    "onLanguage:objectscript",
    "onLanguage:objectscript-csp",
    "onLanguage:objectscript-int",
    "onLanguage:objectscript-macros"
  ],
  "contributes": {
    "commands": [
      {
				"command": "codespex.dismissAllOnActive",
				"title": "Remove All codeSpex Comments on Active Document",
        "category": "codeSpex"
			},
      {
        "command": "codespex.muteThread",
        "title": "Mute",
        "icon": "$(mute)"
      },
      {
        "command": "codespex.resolveThread",
        "title": "Resolve",
        "icon": "$(check)"
      },
      {
        "command": "codespex.unresolveThread",
        "title": "Unresolve",
        "icon": "$(comment-unresolved)"
      },
      {
        "command": "codespex.resolveToken",
        "title": "Resolve All",
        "icon": "$(check-all)"
      },
      {
        "command": "codespex.resolveTokenType",
        "title": "Resolve Token Type"
      },
      {
        "command": "codespex.excludeToken",
        "title": "Exclude All Workspace Occurrences of Token",
        "icon": "$(clear-all)"
      },
      {
        "command": "codespex.excludeToken.global",
        "title": "Apply Exclusion to All Workspaces",
        "icon": "$(close-all)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codespex.muteThread",
          "when": "false"
        },
        {
          "command": "codespex.resolveThread",
          "when": "false"
        },
        {
          "command": "codespex.unresolveThread",
          "when": "false"
        },
        {
          "command": "codespex.resolveToken",
          "when": "false"
        },
        {
          "command": "codespex.resolveTokenType",
          "when": "false"
        },
        {
          "command": "codespex.excludeToken",
          "when": "false"
        },
        {
          "command": "codespex.excludeToken.global",
          "when": "false"
        }
      ],
      "comments/commentThread/title": [
        {
          "command": "codespex.muteThread",
          "group": "1@10"
        },
        {
          "command": "codespex.excludeToken",
          "alt": "codespex.excludeToken.global",
          "group": "1@30"
        },
        {
          "command": "codespex.resolveThread",
          "alt": "codespex.resolveToken",
          "group": "1@20",
          "when": "commentThread == 'unresolved'"
        },
        {
          "command": "codespex.unresolveThread",
          "group": "1@20",
          "when": "commentThread == 'resolved'"
        }
      ]
    }
  },
  "main": "./dist/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
